.wrapper
  = render partial: 'items/exhibit_btn'

  = render partial: 'header'


  .slick_container
    %ul.slider
      %li=image_tag "slide-back-image.png", class: "slide-back-image"
      %li=image_tag "slide-back-image2.png", class: "slide-back-image"

  .items-contents
    .items-contents-category
      %h2 人気のカテゴリー
      %ul.popularity-select
        %li.popularity-select-detail
          =link_to 'レディース', '#'
        %li.popularity-select-detail
          =link_to 'メンズ', '#'
        %li.popularity-select-detail
          =link_to '家電・スマホ・カメラ', '#'
        %li.popularity-select-detail
          =link_to 'おもちゃ・ホビー・グッズ', '#'
  .items-list
    .items-list__style
      .items-list-block
        .items-list-name
          %h3 レディース新着アイテム
        %ul.items-list-image-block
          =render partial:'items/items', collection: @ledies_items, as: 'items'
          
      .items-list-block
        .items-list-name
          %h3 メンズ新着アイテム
        %ul.items-list-image-block
          =render partial:'items/items', collection: @mens_items, as: 'items'

      .items-list-block
        .items-list-name
          %h3 家電・スマホ・カメラ新着アイテム
        %ul.items-list-image-block
          =render partial:'items/items', collection: @camera_items, as: 'items'

          .items-list-block
        .items-list-name
          %h3 おもちゃ・ホビー・グッズ新着アイテム
        %ul.items-list-image-block
          =render partial:'items/items', collection: @toy_items, as: 'items'

  .items-contents
    .items-contents-brand
      %h2 人気のブランド
      %ul.popularity-select
        %li.popularity-select-detail
          =link_to 'シャネル', '#'
        %li.popularity-select-detail
          =link_to 'ルイヴィトン', '#'
        %li.popularity-select-detail
          =link_to 'シュプリーム', '#'
        %li.popularity-select-detail
          =link_to 'ナイキ', '#'
          =link_to 'aaaa', destroy_user_session_path, method: :delete
  .items-list
    .items-list__style
      .items-list-block
        .items-list-name
          %h3 シャネル新着アイテム
        %ul.items-list-image-block
          =render partial:'items/items', collection: @items

  = render partial: 'footer'

