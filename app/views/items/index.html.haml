.wrapper
  = render partial: 'items/exhibit_btn'

  = render partial: 'layouts/header'


  .slick_container
    %ul.slider
      %li=image_tag "slide-back-image.png", class: "slide-back-image"
      %li=image_tag "slide-back-image2.png", class: "slide-back-image"

  .items-contents
    .items-contents-category
      %h2 人気のカテゴリー
      %ul.popularity-select
        %li.popularity-select-detail
          レディース
        %li.popularity-select-detail
          メンズ
        %li.popularity-select-detail
          家電・スマホ・カメラ
        %li.popularity-select-detail
          おもちゃ・ホビー・グッズ
  .items-list
    .items-list__style
      .items-list-block
        .items-list-name
          %h3 レディース新着アイテム
        %ul.items-list-image-block
          =render partial:'items/items', collection: @ledies_items, as: 'items'
          
      .items-list-block
        .items-list-name
          %h3 メンズ新着アイテム
        %ul.items-list-image-block
          =render partial:'items/items', collection: @mens_items, as: 'items'

      .items-list-block
        .items-list-name
          %h3 家電・スマホ・カメラ新着アイテム
        %ul.items-list-image-block
          =render partial:'items/items', collection: @camera_items, as: 'items'

          .items-list-block
        .items-list-name
          %h3 おもちゃ・ホビー・グッズ新着アイテム
        %ul.items-list-image-block
          =render partial:'items/items', collection: @toy_items, as: 'items'

  .items-contents
    .items-contents-brand
      %h2 人気のブランド
      %ul.popularity-select
        %li.popularity-select-detail
          シャネル
        %li.popularity-select-detail
          ルイヴィトン
        %li.popularity-select-detail
          シュプリーム
        %li.popularity-select-detail
          ナイキ
  .items-list
    .items-list__style
      .items-list-block
        .items-list-name
          %h3 シャネル新着アイテム
        %ul.items-list-image-block
          =render partial:'items/items', collection: @chanel, as: 'items'

      .items-list-block
        .items-list-name
          %h3 ルイヴィトン新着アイテム
        %ul.items-list-image-block
          =render partial:'items/items', collection: @louisvuitton, as: 'items'

      .items-list-block
        .items-list-name
          %h3 シュプリーム新着アイテム
        %ul.items-list-image-block
          =render partial:'items/items', collection: @supreme, as: 'items'

      .items-list-block
        .items-list-name
          %h3 ナイキ新着アイテム
        %ul.items-list-image-block
          =render partial:'items/items', collection: @nike, as: 'items'

  = render partial: 'layouts/footer'

