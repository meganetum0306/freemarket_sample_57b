= render partial: 'layouts/header'
%nav.bread-crumbs
  %ul
    %li.itemscope
      - breadcrumb :credit
      = render "layouts/breadcrumbs"
= render partial: 'items/exhibit_btn'

.l-container-clearfix
  .payment-method-box
    .payment-method-box__title
      クレジットカード情報入力
    .payment-method-box__info
      = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
        .card-input-form
          .card-input-form__inner
            .card-input-form__number
              %label カード番号
              %span 必須
              = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            .card-input-form__card-image
              = image_tag "card-image.png"
            .card-input-form__expiration
              %label 有効期限
              %span 必須
              .card-input-form__expiration__select
                %select#exp_month{name: "exp_month", type: "text"}
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                %span 月
                %select#exp_year{name: "exp_year", type: "text"}
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                  %option{value: "2030"}30
                %span 年
            .card-input-form__security
              %label セキュリティコード
              %span 必須
              = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4", id: "cvc"
            .card-input-form__text
              %span ?
              カード背面の番号とは？
            .card-input-form__btn
              #card_token
              = submit_tag "追加する", id: "token_submit"

  = render partial: 'users/side-bar'
= render partial: 'layouts/footer'